<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jd.springcloud.dao.AccountDao" >
    <resultMap id="BaseResultMap" type="com.jd.springcloud.domain.Account" >
        <result property="id" column="id" jdbcType="BIGINT"></result>
        <result property="userId" column="user_id" jdbcType="BIGINT"></result>
        <result property="used" column="used" jdbcType="DECIMAL"></result>
        <result property="total" column="total" jdbcType="DECIMAL"></result>
        <result property="residue" column="residue" jdbcType="DECIMAL"></result>

    </resultMap>
     <!-- public void deacmoney(long userId,BigDecimal money);-->
    <update id="deacmoney">
         UPDATE t_account
         SET
            used=used+#{money},residue=residue-#{money}
         where user_id=#{userId}
    </update>
</mapper>